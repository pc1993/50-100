class Solution {
public:
    int lengthOfLastWord(string s) {
        int n=s.size()-1;
        if(n<0)
        {
            return 0;
        }
        int num=0;
        while(n>=0&&s[n]==' ')
        {
            n--;
        }
        while(n>=0&&s[n]!=' ')
        {
            num++;
            n--;
        }
        return num;
    }
};
